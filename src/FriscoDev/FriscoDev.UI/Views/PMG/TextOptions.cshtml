
@{
    ViewBag.Title = "TextOptions";
}

@section crumbs{

    <div>
        <span onclick="HomePage()" style="cursor:pointer;">Home</span>
        <span>/</span>
        <span>Device Mananger</span>
        <span>/</span>
        <span>SetUp</span>
        <span>/</span>
        <span>Text Options</span>
    </div>
}

<script src="~/library/assets/js/jquery.js"></script>
<script src="~/library/plugins/jquery.uniform.js"></script>
<div class="container">
    <div id="left_layout">
        <div id="mainContent" class="layui-form">
            <div class="layui-fuild">

                <div class="content-title">New Text Page</div>
                <div class="layui-block" style="padding-left:5%;">
                    <div class="layui-block">
                        <div class="layui-inline" style="margin-right: 45px;">
                            <div class="checkbox checkbox-group">
                                <label>
                                    <input type="checkbox" name="allow" value="allow" class="fancy" checked="checked" style="opacity: 0;">Allow Scrolling
                                </label>
                            </div>
                        </div>
                        <div class="layui-inline">
                            <div class="checkbox checkbox-group">
                                <label>
                                    <input type="checkbox" name="repeat" value="repeat" class="fancy" checked="checked" style="opacity: 0;">Repeat Scrolling
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="layui-block">
                        <div class="layui-block" style="background: #fff;">
                            <input type="text" name="text-line-1" placeholder="insert text-line 1" autocomplete="off" class="form-control" style="width:80%;">
                        </div>
                    </div>
                    <div class="layui-block layui-block-top10">
                        <div class="layui-block" style="width: 50%;">
                            <input type="text" name="text-line-2" placeholder="line 2" autocomplete="off" class="form-control" style="background: #fff;" />
                        </div>
                    </div>
                    <div class="layui-block layui-block-top10">
                        <div class="layui-inline" style="width: 50%;background: #fff;">
                            <select class="form-control">
                                <option>Text alignment</option>
                                <option>2</option>
                                <option>3</option>
                            </select>
                            <div class="select-button"></div>
                        </div>
                    </div>
                    <div class="layui-block layui-block-top10">
                        <div class="layui-inline" style="margin-right: 25px;">Scroll time characters/second</div>
                        <div class="layui-input-inline" style="width: 110px;">
                            <input type="number" class="form-control-number-points" name="points" value="1" min="1" max="100" />
                            <div class="input-number-button">
                                <div class="add"></div>
                                <div class="reduce"></div>
                            </div>
                        </div>
                    </div>
                    <div class="layui-block layui-block-top10">
                        <div class="layui-inline" style="margin-right: 20px;">Time per scroll</div>
                        <div class="layui-inline">
                            <div class="layui-input-inline" style="width: 110px;">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="layui-inline" style="line-height: 34px; margin-left: 20px;">Seconds</div>
                    </div>
                    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;margin-bottom:0px;">
                        <legend>Display Time</legend>
                    </fieldset>
                    <div class="layui-block">
                        <div class="layui-inline">
                            <div class="checkbox">
                                <div class="layui-inline" style="margin-right: 30px;">
                                    <input type="radio" name="displaytime" value="cycles" class="fancy" style="opacity: 0;">Text Cycles
                                </div>
                            </div>
                        </div>
                        <div class="layui-inline" style="width: 110px; background: #fff;">
                            <input type="number" class="form-control-number-points" name="points" value="1" min="1" max="100" />
                            <div class="input-number-button">
                                <div class="add"></div>
                                <div class="reduce"></div>
                            </div>
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <div class="layui-block">
                            <div class="layui-inline" style="margin-right: 30px;">
                                <div class="checkbox">
                                    <label style="padding-left:0px;">
                                        <input type="radio" name="displaytime" value="time" class="fancy" style="opacity: 0;"> Time
                                    </label>
                                </div>
                            </div>
                            <div class="layui-inline">
                                <div style="text-align: center; width: 110px; line-height: 30px;">Hours</div>
                                <div class="layui-inline" style="width: 110px; background: #fff;">
                                    <input type="number" class="form-control-number-points" name="points" value="10" min="0" max="59" />
                                    <div class="input-number-button">
                                        <div class="add"></div>
                                        <div class="reduce"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="layui-inline">
                                <div style="text-align: center; width: 110px; line-height: 30px;">Hours</div>
                                <div class="layui-inline" style="width: 110px; background: #fff;">
                                    <input type="number" class="form-control-number-points" name="points" value="10" min="0" max="59" />
                                    <div class="input-number-button">
                                        <div class="add"></div>
                                        <div class="reduce"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="layui-inline">
                                <div style="text-align: center; width: 110px; line-height: 30px;">Hours</div>
                                <div class="layui-inline" style="width: 110px; background: #fff;">
                                    <input type="number" class="form-control-number-points" name="points" value="10" min="0" max="59" />
                                    <div class="input-number-button">
                                        <div class="add"></div>
                                        <div class="reduce"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="layui-block" style="margin:20px 0px 0px 0px;text-align:center;">
                        <button class="button">Add to List</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    initBase()

    function initBase() {
        $(".fancy").uniform();
    }
</script>
